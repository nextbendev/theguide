<!-- Main blog display -->
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <% @blogs.each do |blog| %>
        <div class="col-md-4">
          <div class="card mt-3">
            <div class="card-body">
              <h3><%= link_to blog.headline, blog_path(blog.id) %></h3>
              <%= link_to "View", blog_path(blog.id), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
